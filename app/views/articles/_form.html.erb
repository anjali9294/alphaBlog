<div class="container">

  <div class="row justify-content-center">
    <div class="col-10 ">
    <%= render 'shared/errors' , obj:@article%>
      <%= form_with(model: @article,class:"shadow p-3 mb-3 bg-info rounded" ,local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class:"col-2 col-form-label text-white " %>
          <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded",placeholder:"Title of article" %>
          </div>
        </div>
        <br/>
        <div class="form-group row">
          <%= f.label :description ,class:"col-2 col-form-label text-white"%>
          <div class="col-10">
          <%= f.text_area :description,rows: 10,class: "form-control shadow rounded",placeholder:"Description" %>
          </div>
        </div>

        <div class = "text-center mt-3">
          <%= f.submit class:"btn btn-outline-primary" %>
          <%= link_to 'Back to Article', articles_path ,class: "btn btn-outline-secondary"%>
        </div>

      <% end %>
      
    </div>
      
  </div>
</div>