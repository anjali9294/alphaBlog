<h1 class="text-center mt-4">create anew category</h1>
<div class="container">

  <div class="row justify-content-center">
    <div class="col-10 ">
    <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category,class:"shadow p-3 mb-3 bg-info rounded" ,local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name,"Category name", class:"col-2 col-form-label text-white " %>
          <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded",placeholder:"enter a name" %>
          </div>
        </div>
        <br/>
        <div class = "text-center mt-3">
          <%= f.submit class:"btn btn-outline-primary" %>
         
        </div>

      <% end %>
      
    </div>
      
  </div>
</div>